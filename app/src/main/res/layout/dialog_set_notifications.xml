<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_strok_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_notif_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="@font/janna"
        android:gravity="center"
        android:text="ضبط مواعيد التنبيهات"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_notif_title" />

    <TextView
        android:id="@+id/tv_notif_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/janna"
        android:padding="10dp"
        android:text="@string/notif_dilog_desc"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/status_tv"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_notif_des" />

    <Button
        android:id="@+id/btn_morning_notif"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/lightBlue"
        android:fontFamily="@font/janna"
        android:padding="10dp"
        android:text="@string/morning_notif_time"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_status" />

    <TextView
        android:id="@+id/tv_morning_notif"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:background="@color/lightGreen"
        android:fontFamily="@font/janna"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_morning_notif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_morning_notif"
        app:layout_constraintTop_toTopOf="@id/btn_morning_notif" />

    <Button
        android:id="@+id/btn_evening_notif"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/lightBlue"
        android:fontFamily="@font/janna"
        android:padding="10dp"
        android:text="@string/evening_notif_time"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_morning_notif" />

    <TextView
        android:id="@+id/tv_evening_notif"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:background="@color/lightGreen"
        android:fontFamily="@font/janna"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_evening_notif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_evening_notif"
        app:layout_constraintTop_toTopOf="@id/btn_evening_notif" />

    <Button
        android:id="@+id/btn_hadith_notif"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/lightBlue"
        android:fontFamily="@font/janna"
        android:padding="10dp"
        android:text="@string/hadith_notif_time"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_evening_notif" />

    <TextView
        android:id="@+id/tv_hadith_notif"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:background="@color/lightGreen"
        android:fontFamily="@font/janna"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_hadith_notif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_hadith_notif"
        app:layout_constraintTop_toTopOf="@id/btn_hadith_notif" />

    <Button
        android:id="@+id/btn_close_dialog"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="15dp"
        android:background="@color/darkRed"
        android:fontFamily="@font/janna"
        android:padding="10dp"
        android:text="إغلاق هذه النافذة"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_hadith_notif" />

</androidx.constraintlayout.widget.ConstraintLayout>